{
	"name": "weekly",
	"version": "1.0.0",
	"main": "node_modules/expo/AppEntry.js",
	"private": true,
	"scripts": {
		"start": "expo start",
		"android": "expo start --android",
		"ios": "expo start --ios",
		"web": "expo start --web",
		"lint:check": "bunx @biomejs/biome lint ./src/*",
		"lint:apply": "bunx @biomejs/biome check --apply ./src/*",
		"ts:check": "tsc && bun run lint:check",
		"prepare": "husky",
		"test": "bun run ts:check",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@types/react": "~18.2.45",
		"expo": "~50.0.8",
		"expo-status-bar": "~1.11.1",
		"react": "18.2.0",
		"react-native": "0.73.4",
		"typescript": "^5.3.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.0",
		"@biomejs/biome": "1.5.3",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --apply --no-errors-on-unmatched",
			"biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
			"biome check --apply-unsafe --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --apply --no-errors-on-unmatched"
		],
		"*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
	}
}
